@model  List<Book> 
@{
    ViewData["Title"] = "Home Page";
}


<section class="py-5 text-center container">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">Benvenuto nella tua Libreria</h1>
        </div>
    </div>
</section>
<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 d-flex justify-content-between">
           
                @foreach (Book books in Model)
                {
                    <div class="col-6">

                        @if(!books.Disponibilità)
                        {
                            <div class="card shadow-sm" height="300">
                                <img class="card-img-top" src="@books.UrlImmagine" alt="@books.Titolo"></img>
                                <div class="card-body">
                                    <p class="card-text">@books.Descrizione</p>
                                    <p>@books.Genre.Nome</p>
                                    <p class="text-danger">NON DISPONIBILE</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-sm btn-outline-secondary" disabled>Prenota</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="card shadow-sm" height="300">
                                <img class="card-img-top" src="@books.UrlImmagine" alt="@books.Titolo"></img>
                                <div class="card-body">
                                    <p class="card-text">@books.Descrizione</p>
                                    <p class="text-success">DISPONIBILE</p>
                                    <p>@books.Genre.Nome</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-sm btn-outline-secondary">Prenota</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    
                    </div>
                }
            
        </div>
    </div>
</div>